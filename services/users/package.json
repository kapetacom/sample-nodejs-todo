{
    "name": "@kapeta/nodejs-sample-users-service",
    "version": "0.0.1",
    "type": "commonjs",
    "scripts": {
        "start:dev": "NODE_ENV=development npm run build && npm run migrate --if-present && nodemon --ext ts,tsx,js,json,yaml,yml --watch '**/*' index.ts",
        "start": "NODE_ENV=production npm run migrate --if-present && ts-node --transpile-only index.ts",
        "migrate:dev:users": "cross-env-shell DATABASE_URL=$(npx kap-postgres-url users) prisma migrate dev --schema ./db/users/schema.prisma",
        "migrate:db:users": "cross-env-shell DATABASE_URL=$(npx kap-postgres-url users) prisma migrate deploy --schema ./db/users/schema.prisma",
        "migrate:generate:users": "prisma generate --schema ./db/users/schema.prisma",
        "migrate:dev": "npm-run-pattern migrate:dev:",
        "migrate:generate": "npm-run-pattern migrate:generate:",
        "migrate": "npm-run-pattern migrate:db:",
        "format": "prettier --write .",
        "build": "npm run migrate:generate",
        "lint": "tsc --noEmit && eslint src/**/*.ts",
        "start:dev:docker": "NODE_ENV=development npm run migrate:generate --if-present && npm run migrate --if-present && nodemon --exitcrash --ext ts,tsx,js,json,yaml,yml --watch '**/*' index.ts"
    },
    "prettier": "@kapeta/prettier-config",
    "devDependencies": {
        "@kapeta/eslint-config": "^0.7.0",
        "@kapeta/prettier-config": "^0.6.2",
        "@types/express": "^4",
        "@types/md5": "^2.3.2",
        "@types/node": "^20.2.5",
        "@types/react": "^18.2.11",
        "cross-env": "^7.0.3",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "prisma": "^5.6.0",
        "tsconfig-paths": "^4.2.0"
    },
    "dependencies": {
        "@kapeta/sdk-auth-jwt": "^2.1",
        "@kapeta/sdk-config": "^2",
        "@kapeta/sdk-rest-route": "^2.1",
        "@kapeta/sdk-server": "^3.2",
        "@kapeta/sdk-smtp-client": "^2",
        "@kapeta/sdk-sqldb-postgresql": "^2.1",
        "@prisma/client": "^5.6.0",
        "@react-email/button": "^0.0.8",
        "@react-email/html": "^0.0.4",
        "@types/express": "^4",
        "@types/node": "^20",
        "@types/node-jose": "^1.1.13",
        "express": "^4",
        "md5": "^2.3.0",
        "npm-run-pattern": "^1.1.2",
        "react": "^18.2.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.2",
        "@kapeta/sdk-rest": "^1.0.1"
    }
}